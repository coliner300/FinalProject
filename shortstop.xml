<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:text="Shortstop"
        android:textSize="35dp"
        android:gravity="center"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/shortText"
        android:layout_width="500dp"
        android:layout_height="360dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="0dp"
        android:text="The shortstop is the most athletic person on the field. This position is made for players
that can make diving plays and have really good arms. This position is the captain of the infield and they earned their respect from the team
if they are good."
        android:textSize="30dp"
        android:gravity="center"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="400dp"
        android:layout_marginLeft="4dp"
        android:layout_height="250dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:layout_below="@+id/shortText"
        app:srcCompat="@drawable/shortstop" />

    <Button
        android:id="@+id/backSS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Back" />


</RelativeLayout>