<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:text="High School"
        android:textSize="35dp"
        android:gravity="center"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/highSchoolText"
        android:layout_width="500dp"
        android:layout_height="390dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="0dp"
        android:text="When kids get into high school, if they wanna play they go to tryouts. This is the beginning of competitive baseball for
children. If people don't make a high school team, they usually stop playing competitively. High school is the stepping stone for higher levels. "
        android:textSize="30dp"
        android:gravity="center"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="400dp"
        android:layout_marginLeft="4dp"
        android:layout_height="230dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:layout_below="@+id/highSchoolText"
        app:srcCompat="@drawable/highschool" />

    <Button
        android:id="@+id/backHS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Back" />


</RelativeLayout>
